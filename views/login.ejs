<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') -%>

<body>
<!-- Start your project here-->
<div class="mb-7">
    <%- include('partials/navBar') -%>
</div>

<div class="container">
    <div class="d-flex justify-content-center align-items-center" style="margin-top:140px; margin-bottom:50px;">
        <!-- Section: Design Block -->
        <section class="text-center text-lg-start">
            <style>
                .cascading-right {
                    margin-right: -50px;
                }
                @media (max-width: 991.98px) {
                    .cascading-right {
                        margin-right: 0;
                    }
                }
            </style>

            <!-- Jumbotron -->
            <div class="container py-4">
                <div class="row g-0 align-items-center">
                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <div
                                class="card cascading-right"
                                style="
                      background: hsla(0, 0%, 100%, 0.55);
                      backdrop-filter: blur(30px);
                      "
                        >
                            <div class="card-body p-5 shadow-5 text-center">
                                <h1 class="fw-bold mb-5">Member Login</h1>
                                <form enctype="multipart/form-data" method="post" action="/login/user">
                                    <!-- 2 column grid layout with text inputs for the first and last names -->
                                    <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                <input
                                                        name="username"
                                                        type="text"
                                                        id="form3Example2"
                                                        class="form-control"
                                                />
                                                <label class="form-label" for="form3Example2"
                                                >Username</label
                                                >
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Email input -->
                                    <div class="form-outline mb-4">
                                        <input
                                                name="password"
                                                type="password"
                                                id="form3Example4"
                                                class="form-control"
                                        />
                                        <label class="form-label" for="form3Example4"
                                        >Password</label
                                        >
                                    </div>

                                    <!-- Submit button -->
                                    <button
                                            type="submit"
                                            class="btn btn-primary btn-block mb-4"
                                    >
                                        login
                                    </button>

                                    <!-- Register buttons -->
                                    <div class="text-center">
                                        <p>Not a member? <a href="/register">SignUp</a> today.</p>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <img
                                src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg"
                                class="w-100 rounded-4 shadow-4"
                                alt=""
                        />
                    </div>
                </div>
            </div>
            <!-- Jumbotron -->
        </section>
        <!-- Section: Design Block -->
    </div>
</div>
<!-- Footer -->
<%- include('partials/footer') -%>
<!-- Footer -->

<%- include('partials/scripts') -%>
</body>

</html>